#!/usr/bin/perl
#
# Spoor forwarder.
#

use strict;
use File::Basename;
use Getopt::Long qw(:config no_ignore_case bundling);

use FindBin qw($Bin);
use lib "$Bin/../lib";
use Spoor::ForwarderFactory;

sub usage {
  warn @_ if @_;
  die "usage: " . basename($0) . " [-v] --target <config_section>\n";
}

my $verbose = 0;
my ($help, $noop, $count, $target);
usage unless GetOptions(
  'help|h|?'        => \$help,
  'verbose|v+'      => \$verbose,
  'noop|n'          => \$noop,
  'count|c=i'       => \$count,
  'target|t=s'      => \$target,
);
usage if $help;
usage if @ARGV;
usage "Missing required --target argument\n" unless $target;

Spoor::ForwarderFactory->new(target => $target, noop => $noop, verbose => $verbose, count => $count)->run;

