% layout 'default';
<h1><%= $title %></h1>
<div id="post<%= $post->id %>" class="post">
<a id="<%= $post->id %>"></a>
<p class="post_text"><%== $post->post_html %></p>
<p class="post_meta"><a href="" class="post_ts" data-epoch="<%= $tp->epoch %>" title="<%= $tp->strftime('%d %b %Y, %I:%M %p') %>"><%= Spoor::Util::tp2human_duration($tp, $now) %></a></p>
</div>
